<?xml version="1.0" encoding="utf-8"?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tripshare.controls.ItemTileControl"
             ColumnDefinitions="Auto, *" RowDefinitions="Auto"
             BindingContext="{x:Reference ItemTile}"
             x:Name="ItemTile">
    <Image 
            Source="{Binding ItemIcon}" 
            WidthRequest="16" 
            HeightRequest="16" 
            Margin="0,0,8,0" />
    <Label 
        Grid.Column="1"
        Text="{Binding ItemLabel}"
        TextColor="#8F9AAE"
        FontSize="12"
        FontFamily="OxygenLight" 
        HorizontalTextAlignment="Start"/>
</Grid>